@model IEnumerable<WebApplication2.Models.detail_list>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.detail.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.work.desc_work)
        </th>
        <th></th>
    </tr>

