@model IEnumerable<WebApplication2.Models.work>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "works", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            <label for="query">
                <input type="text" name="search" class="form-control" />
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Описание работы")
        </th>
        <th>
            @Html.DisplayName("Стоимость")
        </th>
        <th>
            @Html.DisplayName("Гос.номер")
        </th>
        <th>
            @Html.DisplayName("Номер протокола")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.desc_work)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.value)
        </td>
        <td>
            @Html.ActionLink(Html.DisplayFor(modelItem => item.car.state_num).ToString(), "Details", "cars", new { id = item.id_car }, null)
        </td>
        <td>
            @Html.ActionLink(Html.DisplayFor(modelItem => item.protocol.act_delivering).ToString(), "Details", "protocols", new { id = item.id_protocol }, null)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
